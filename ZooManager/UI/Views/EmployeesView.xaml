<UserControl x:Class="ZooManager.UI.Views.EmployeesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:ZooManager.UI.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             AutomationProperties.AutomationId="View.Employees">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Linke Seite: Mitarbeiterliste -->
        <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,12,0"
                AutomationProperties.AutomationId="Employees.LeftCard">
            <DockPanel>
                <TextBlock Text="Personal" DockPanel.Dock="Top" FontSize="20" FontWeight="Bold" Margin="0,0,0,16"
                           AutomationProperties.AutomationId="Employees.Title"/>

                <StackPanel DockPanel.Dock="Bottom" Margin="0,12,0,0">
                    <Button Content="+ Mitarbeiter anlegen"
                            Padding="8"
                            Command="{Binding AddEmployeeCommand}"
                            Background="{StaticResource PrimaryBrush}"
                            Foreground="White"
                            FontWeight="Bold"
                            AutomationProperties.AutomationId="Employees.AddEmployeeBtn"/>

                    <Button Content="Mitarbeiter löschen"
                            Padding="8"
                            Margin="0,8,0,0"
                            Command="{Binding DeleteEmployeeCommand}"
                            Background="#FFEBEE"
                            Foreground="#D32F2F"
                            BorderBrush="#FFCDD2"
                            AutomationProperties.AutomationId="Employees.DeleteEmployeeBtn"/>
                </StackPanel>

                <ListBox x:Name="EmployeesList"
                         BorderThickness="0"
                         ItemsSource="{Binding Employees}"
                         SelectedItem="{Binding SelectedEmployee}"
                         AutomationProperties.AutomationId="Employees.EmployeesList">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock FontSize="14" Margin="0,4"
                                       AutomationProperties.Name="{Binding LastName}">
                                <Run Text="{Binding LastName}" FontSize="16" FontWeight="Bold"/>, <Run Text="{Binding FirstName}" FontSize="16" FontWeight="SemiBold"/>
                            </TextBlock>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Rechte Seite -->
        <Grid Grid.Column="1">
            <!-- ANZEIGE-MODUS (Qualifikationen) -->
            <ScrollViewer x:Name="EmployeeDetailsArea"
                          Visibility="{Binding IsDetailsOpen, Converter={StaticResource BoolToVisibility}}"
                          AutomationProperties.AutomationId="Employees.DetailsArea">
                <Border Style="{StaticResource Card}" Margin="0">
                    <StackPanel>
                        <TextBlock x:Name="SelectedEmployeeTitle"
                                   Text="{Binding SelectedEmployeeTitle}"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Margin="0,0,0,16"
                                   AutomationProperties.AutomationId="Employees.SelectedEmployeeTitle"/>

                        <TextBlock Text="Qualifikationen:" FontSize="16" FontWeight="SemiBold" Margin="0,10,0,8"
                                   AutomationProperties.AutomationId="Employees.QualificationsTitle"/>
                        <TextBlock Text="Kann folgende Tierarten betreuen:" Margin="0,0,0,12" FontStyle="Italic"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   AutomationProperties.AutomationId="Employees.QualificationsHint"/>

                        <ItemsControl x:Name="QualificationList"
                                      ItemsSource="{Binding Qualifications}"
                                      AutomationProperties.AutomationId="Employees.QualificationList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding SpeciesName}"
                                              IsChecked="{Binding IsQualified, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Margin="0,6"
                                              Command="{Binding DataContext.ToggleQualificationCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </ScrollViewer>

            <!-- EDITOR-MODUS (Neu anlegen) -->
            <Border x:Name="EmployeeEditorArea"
                    Style="{StaticResource Card}"
                    Visibility="{Binding IsEditorOpen, Converter={StaticResource BoolToVisibility}}"
                    VerticalAlignment="Top"
                    Margin="0"
                    AutomationProperties.AutomationId="Employees.EditorArea">
                <StackPanel>
                    <TextBlock Text="Mitarbeiter registrieren" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"
                               AutomationProperties.AutomationId="Employees.Editor.Title"/>

                    <Label Content="Vorname:"/>
                    <TextBox x:Name="NewEmpFirstName"
                             Margin="0,0,0,12"
                             Padding="8"
                             Text="{Binding NewEmpFirstName, UpdateSourceTrigger=PropertyChanged}"
                             AutomationProperties.AutomationId="Employees.Editor.NewEmpFirstName"/>

                    <Label Content="Nachname:"/>
                    <TextBox x:Name="NewEmpLastName"
                             Margin="0,0,0,16"
                             Padding="8"
                             Text="{Binding NewEmpLastName, UpdateSourceTrigger=PropertyChanged}"
                             AutomationProperties.AutomationId="Employees.Editor.NewEmpLastName"/>

                    <Separator Margin="0,8,0,16"/>

                    <TextBlock Text="Login für Mitarbeiter" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"
                               AutomationProperties.AutomationId="Employees.Editor.LoginSectionTitle"/>

                    <Label Content="Benutzername (Login):"/>
                    <TextBox x:Name="NewEmpUsername"
                             Margin="0,0,0,12"
                             Padding="8"
                             Text="{Binding NewEmpUsername, UpdateSourceTrigger=PropertyChanged}"
                             AutomationProperties.AutomationId="Employees.Editor.NewEmpUsername"/>

                    <Label Content="Passwort:"/>
                    <PasswordBox x:Name="NewEmpPassword"
                                 Margin="0,0,0,24"
                                 Padding="8"
                                 AutomationProperties.AutomationId="Employees.Editor.NewEmpPassword"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Abbrechen"
                                Style="{StaticResource NavButton}"
                                Margin="0,0,12,0"
                                Command="{Binding CancelEmployeeEditorCommand}"
                                AutomationProperties.AutomationId="Employees.Editor.CancelBtn"/>
                        <Button Content="Speichern"
                                Padding="24,8"
                                Background="{StaticResource PrimaryBrush}"
                                Foreground="White"
                                Command="{Binding SaveNewEmployeeCommand}"
                                AutomationProperties.AutomationId="Employees.Editor.SaveBtn"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
<Window x:Class="ZooManager.UI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:ZooManager.UI.Converters"
        Title="ZooManager - Anmeldung"
        Height="500"
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="#F4F6F8"
        ShowInTaskbar="True">

    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Border Background="#F4F6F8"
            CornerRadius="12"
            BorderBrush="#EEE"
            BorderThickness="1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource PrimaryBrush}"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid Margin="24,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Zoo Manager"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <Button Grid.Column="1"
                            Width="36"
                            Height="30"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="White"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            ToolTip="Schließen"
                            Click="CloseButton_Click"
                            Content="✕">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="CloseButtonBorder"
                                        Background="Transparent"
                                        CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="CloseButtonBorder" Property="Background" Value="#E53935"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="CloseButtonBorder" Property="Background" Value="#C62828"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <Border Grid.Row="1"
                    Background="White"
                    Margin="40,40,40,40"
                    CornerRadius="10"
                    Padding="40">
                <StackPanel VerticalAlignment="Center">

                    <TextBlock Text="Anmeldung"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextMainBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Bitte melden Sie sich an"
                               FontSize="14"
                               Foreground="{StaticResource TextMutedBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>

                    <TextBlock Text="Benutzername"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Foreground="{StaticResource TextMainBrush}"
                               Margin="0,0,0,8"/>

                    <TextBox x:Name="UsernameTextBox"
                             AutomationProperties.AutomationId="UsernameTextBox"
                             AutomationProperties.Name="UsernameTextBox"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Height="40"
                             FontSize="14"
                             Padding="12,10"
                             BorderBrush="#E0E0E0"
                             BorderThickness="1"
                             Margin="0,0,0,20"/>

                    <TextBlock Text="Passwort"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Foreground="{StaticResource TextMainBrush}"
                               Margin="0,0,0,8"/>

                    <PasswordBox x:Name="PasswordBox"
                                 AutomationProperties.AutomationId="PasswordBox"
                                 AutomationProperties.Name="PasswordBox"
                                 Height="40"
                                 FontSize="14"
                                 Padding="12,10"
                                 BorderBrush="#E0E0E0"
                                 BorderThickness="1"
                                 Margin="0,0,0,10"/>

                    <Label x:Name="ErrorMessage"
                           AutomationProperties.AutomationId="ErrorMessage"
                           Content="{Binding ErrorMessage}"
                           Visibility="{Binding IsErrorVisible, Converter={StaticResource BoolToVisibility}}"
                           Foreground="#E53935"
                           FontSize="13"
                           Margin="0,0,0,20"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"/>

                    <Button x:Name="LoginButton"
                            AutomationProperties.AutomationId="LoginButton"
                            AutomationProperties.Name="LoginButton"
                            Command="{Binding LoginCommand}"
                            Content="Anmelden"
                            Height="44"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Background="{StaticResource PrimaryBrush}"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,10,0,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="6"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1B5E20"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#145214"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Border Background="#F4F6F8"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,30,0,0">
                        <StackPanel>
                            <TextBlock Text="Standard-Zugangsdaten"
                                       FontWeight="SemiBold"
                                       FontSize="12"
                                       Foreground="{StaticResource TextMainBrush}"
                                       Margin="0,0,0,8"/>
                            <TextBlock FontSize="12"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       LineHeight="18">
                                <Run Text="Admin: "/>
                                <Run Text="admin" FontWeight="SemiBold" Foreground="{StaticResource TextMainBrush}"/>
                                <Run Text=" / "/>
                                <Run Text="admin" FontWeight="SemiBold" Foreground="{StaticResource TextMainBrush}"/>
                                <LineBreak/>
                                <Run Text="Manager: "/>
                                <Run Text="manager" FontWeight="SemiBold" Foreground="{StaticResource TextMainBrush}"/>
                                <Run Text=" / "/>
                                <Run Text="manager" FontWeight="SemiBold" Foreground="{StaticResource TextMainBrush}"/>
                                <LineBreak/>
                                <Run Text="Mitarbeiter: "/>
                                <Run Text="pfleger" FontWeight="SemiBold" Foreground="{StaticResource TextMainBrush}"/>
                                <Run Text=" / "/>
                                <Run Text="pfleger" FontWeight="SemiBold" Foreground="{StaticResource TextMainBrush}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
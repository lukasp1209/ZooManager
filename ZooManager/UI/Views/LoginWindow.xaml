<Window x:Class="ZooManager.UI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ZooManager - Anmeldung" 
        Height="500" 
        Width="450"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        Background="#F4F6F8">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header - Matching MainWindow -->
        <Border Grid.Row="0" Background="#2E7D32">
            <Grid Margin="24,0">
                <TextBlock Text="🦁 Zoo Manager"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Login Form -->
        <Border Grid.Row="1" Background="White" 
                Margin="40,40,40,40" 
                CornerRadius="8"
                Padding="40">
            <StackPanel VerticalAlignment="Center">
                
                <TextBlock Text="Anmeldung" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="Bitte melden Sie sich an" 
                           FontSize="14" 
                           Foreground="#6C757D"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>
                
                <!-- Username -->
                <TextBlock Text="Benutzername" 
                           FontWeight="SemiBold" 
                           FontSize="14"
                           Foreground="#2C3E50"
                           Margin="0,0,0,8"/>
                <TextBox Name="UsernameTextBox" 
                         Height="40" 
                         FontSize="14" 
                         Padding="12,10"
                         BorderBrush="#E0E0E0" 
                         BorderThickness="1" 
                         Margin="0,0,0,20"/>
                
                <!-- Password -->
                <TextBlock Text="Passwort" 
                           FontWeight="SemiBold" 
                           FontSize="14"
                           Foreground="#2C3E50"
                           Margin="0,0,0,8"/>
                <PasswordBox Name="PasswordBox" 
                             Height="40" 
                             FontSize="14"
                             Padding="12,10"
                             BorderBrush="#E0E0E0" 
                             BorderThickness="1" 
                             Margin="0,0,0,10"/>
                
                <!-- Error Message -->
                <TextBlock Name="ErrorMessage" 
                           Foreground="#e74c3c" 
                           FontSize="13" 
                           Visibility="Collapsed" 
                           Margin="0,0,0,20" 
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"/>
                
                <!-- Login Button -->
                <Button Name="LoginButton" 
                        Content="Anmelden" 
                        Height="44" 
                        FontSize="15" 
                        FontWeight="SemiBold" 
                        Background="#2E7D32" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Cursor="Hand" 
                        Click="LoginButton_Click"
                        Margin="0,10,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1B5E20"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- Credentials Info -->
                <Border Background="#F4F6F8" 
                        CornerRadius="6" 
                        Padding="16" 
                        Margin="0,30,0,0">
                    <StackPanel>
                        <TextBlock Text="Standard-Zugangsdaten" 
                                   FontWeight="SemiBold" 
                                   FontSize="12" 
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,8"/>
                        <TextBlock FontSize="12" 
                                   Foreground="#6C757D"
                                   LineHeight="18">
                            <Run Text="Manager: "/>
                            <Run Text="manager" FontWeight="SemiBold" Foreground="#2C3E50"/>
                            <Run Text=" / "/>
                            <Run Text="password" FontWeight="SemiBold" Foreground="#2C3E50"/>
                            <LineBreak/>
                            <Run Text="Mitarbeiter: "/>
                            <Run Text="max.mustermann" FontWeight="SemiBold" Foreground="#2C3E50"/>
                            <Run Text=" / "/>
                            <Run Text="password" FontWeight="SemiBold" Foreground="#2C3E50"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
<Window x:Class="ZooManager.UI.Views.SpeciesEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Species Editor"
        Width="700" Height="500"
        MinWidth="600" MinHeight="450"
        WindowStartupLocation="CenterOwner"
        Background="#F4F6F8">

    <!-- ========= RESOURCES ========= -->
    <Window.Resources>

        <SolidColorBrush x:Key="PrimaryBrush" Color="#1E5631"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="TextMainBrush" Color="#1F2933"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="#6B7280"/>

        <!-- Card -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10"
                                      ShadowDepth="2"
                                      Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Labels -->
        <Style TargetType="TextBlock" x:Key="FormLabel">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextMainBrush}"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button"
               BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="{StaticResource TextMainBrush}"/>
        </Style>

    </Window.Resources>

    <!-- ========= LAYOUT ========= -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20">
            <TextBlock Text="Species Editor"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"/>
        </Border>

        <!-- CONTENT -->
        <Border Grid.Row="1"
                Style="{StaticResource Card}"
                Margin="24">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Species Name -->
                <StackPanel Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock Text="Species Name"
                               Style="{StaticResource FormLabel}"/>
                    <TextBox />
                </StackPanel>

                <!-- Scientific Name -->
                <StackPanel Grid.Row="1" Margin="0,0,0,16">
                    <TextBlock Text="Scientific Name"
                               Style="{StaticResource FormLabel}"/>
                    <TextBox />
                </StackPanel>

                <!-- Category -->
                <StackPanel Grid.Row="2" Margin="0,0,0,16">
                    <TextBlock Text="Category"
                               Style="{StaticResource FormLabel}"/>
                    <ComboBox Height="34">
                        <ComboBoxItem Content="Mammal"/>
                        <ComboBoxItem Content="Bird"/>
                        <ComboBoxItem Content="Reptile"/>
                        <ComboBoxItem Content="Amphibian"/>
                        <ComboBoxItem Content="Fish"/>
                    </ComboBox>
                </StackPanel>

                <!-- Description -->
                <StackPanel Grid.Row="3">
                    <TextBlock Text="Description"
                               Style="{StaticResource FormLabel}"/>
                    <TextBox Height="80"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"/>
                </StackPanel>

            </Grid>
        </Border>

        <!-- FOOTER / ACTIONS -->
        <Border Grid.Row="2"
                Background="White"
                Padding="16">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Cancel"
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,8,0"/>

                <Button Content="Save Species"
                        Style="{StaticResource PrimaryButton}"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>

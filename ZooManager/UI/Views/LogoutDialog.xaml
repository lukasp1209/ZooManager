<Window x:Class="ZooManager.UI.Views.LogoutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Abmelden"
        Height="260"
        Width="420"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Border Background="White"
            CornerRadius="12"
            BorderBrush="#EEE"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="{StaticResource PrimaryBrush}"
                    CornerRadius="12,12,0,0"
                    Padding="24,0">
                <TextBlock Text="Abmelden"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </Border>

            <StackPanel Grid.Row="1"
                        Margin="24,16"
                        VerticalAlignment="Center">
                <TextBlock Text="Möchten Sie sich wirklich abmelden?"
                           FontSize="14"
                           Foreground="{StaticResource TextMainBrush}"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Sie werden zurück zur Anmeldung geleitet."
                           FontSize="12"
                           Foreground="{StaticResource TextMutedBrush}"
                           TextAlignment="Center"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <Border Grid.Row="2"
                    Background="#F4F6F8"
                    CornerRadius="0,0,12,12"
                    Padding="24,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            x:Name="CancelButton"
                            Content="Abbrechen"
                            Height="40"
                            Style="{StaticResource NavButton}"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Click="CancelButton_Click"/>

                    <Button Grid.Column="2"
                            x:Name="LogoutButton"
                            Content="Abmelden"
                            Height="40"
                            Background="#E53935"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            Click="LogoutButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="6"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C62828"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#B71C1C"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
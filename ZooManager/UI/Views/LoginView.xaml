<Window x:Class="ZooManager.UI.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zoo Manager – Login"
        Width="420" Height="360"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F4F6F8">

    <!-- ========= RESOURCES ========= -->
    <Window.Resources>

        <SolidColorBrush x:Key="PrimaryBrush" Color="#1E5631"/>
        <SolidColorBrush x:Key="TextMainBrush" Color="#1F2933"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="#6B7280"/>

        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="28"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10"
                                      ShadowDepth="2"
                                      Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextMainBrush}"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

    </Window.Resources>

    <!-- ========= LAYOUT ========= -->
    <Grid>
        <Border Style="{StaticResource Card}"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="360">

            <StackPanel>

                <!-- Title -->
                <TextBlock Text="Zoo Manager"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextMainBrush}"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Please sign in"
                           Foreground="{StaticResource TextMutedBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,24"/>

                <!-- Username -->
                <TextBlock Text="Username"
                           Style="{StaticResource FormLabel}"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,16"/>

                <!-- Password -->
                <TextBlock Text="Password"
                           Style="{StaticResource FormLabel}"/>
                <PasswordBox x:Name="PasswordBox"
                             Margin="0,0,0,24"/>

                <!-- Error -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="Red"
                           FontSize="12"
                           Visibility="{Binding HasError}"
                           Margin="0,0,0,12"/>

                <!-- Login Button -->
                <Button Content="Login"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding LoginCommand}"
                        CommandParameter="{Binding ElementName=PasswordBox, Path=Password}"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>

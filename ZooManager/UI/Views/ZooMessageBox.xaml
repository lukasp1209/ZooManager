<Window x:Class="ZooManager.UI.Views.ZooMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zoo Manager Info" 
        Width="400" Height="220"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    
    <Border Background="White" CornerRadius="12" BorderBrush="#EEE" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.2"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" CornerRadius="12,12,0,0">
                <TextBlock x:Name="TitleText" Text="Meldung" Foreground="White" 
                           VerticalAlignment="Center" HorizontalAlignment="Center" 
                           FontWeight="Bold" FontSize="16"/>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="24,16" VerticalAlignment="Center">
                <TextBlock x:Name="MessageText" Text="Hier steht die Fehlermeldung..." 
                           TextWrapping="Wrap" TextAlignment="Center" 
                           FontSize="14" Foreground="{StaticResource TextMainBrush}"/>
            </StackPanel>

            <!-- Footer -->
            <Button Grid.Row="2" Content="Verstanden" Width="120" Height="35" 
                    Style="{StaticResource NavButton}" Background="#F4F6F8"
                    HorizontalAlignment="Center" Click="OkButton_Click" Cursor="Hand"/>
        </Grid>
    </Border>
</Window>

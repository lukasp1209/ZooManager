<Window x:Class="ZooManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zoo Manager Professional"
        Width="1200" Height="750"
        MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F8">

    <!-- ========== RESOURCES ========== -->
    <Window.Resources>

        <!-- Colors -->
        <Color x:Key="Primary">#1E5631</Color>
        <Color x:Key="Accent">#4CAF50</Color>
        <Color x:Key="TextMain">#1F2933</Color>
        <Color x:Key="TextMuted">#6B7280</Color>

        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>
        <SolidColorBrush x:Key="TextMainBrush" Color="{StaticResource TextMain}"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>

        <!-- Card -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10"
                                      ShadowDepth="2"
                                      Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Sidebar Button -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextMainBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="6"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E8F5E9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#C8E6C9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- ========== LAYOUT ========== -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== HEADER ===== -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}">
            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Zoo Manager"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Ellipse Width="36" Height="36" Fill="#E8F5E9"/>
                    <TextBlock Text="Admin"
                               Margin="12,0,0,0"
                               Foreground="White"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== MAIN ===== -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Border Grid.Column="0" Background="White">
                <StackPanel Margin="16">

                    <TextBlock Text="Navigation"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="8,0,0,16"/>

                    <Button Content="Dashboard" Style="{StaticResource NavButton}"/>
                    <Button Content="Animals" Style="{StaticResource NavButton}"/>
                    <Button Content="Species" Style="{StaticResource NavButton}"/>
                    <Button Content="Enclosures" Style="{StaticResource NavButton}"/>
                    <Button Content="Employees" Style="{StaticResource NavButton}"/>
                    <Button Content="Events" Style="{StaticResource NavButton}"/>

                    <Separator Margin="0,16"/>

                    <Button Content="Reports" Style="{StaticResource NavButton}"/>
                    <Button Content="Settings" Style="{StaticResource NavButton}"/>
                </StackPanel>
            </Border>

            <!-- CONTENT -->
            <ScrollViewer Grid.Column="1">
                <StackPanel Margin="24">

                    <!-- Title -->
                    <TextBlock Text="Dashboard"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextMainBrush}"/>

                    <!-- STATS -->
                    <UniformGrid Columns="3" Margin="0,24,0,0">
                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="Total Animals"
                                           Foreground="{StaticResource TextMutedBrush}"/>
                                <TextBlock Text="247"
                                           FontSize="32"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="Enclosures"
                                           Foreground="{StaticResource TextMutedBrush}"/>
                                <TextBlock Text="23"
                                           FontSize="32"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="Employees"
                                           Foreground="{StaticResource TextMutedBrush}"/>
                                <TextBlock Text="42"
                                           FontSize="32"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <!-- ACTIVITY -->
                    <Border Style="{StaticResource Card}" Margin="0,24,0,0">
                        <StackPanel>
                            <TextBlock Text="Recent Activity"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,12"/>

                            <ListBox BorderThickness="0">
                                <ListBoxItem>
                                    <StackPanel>
                                        <TextBlock Text="Lion transferred to Savanna Enclosure #3"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="2 hours ago · Admin"
                                                   FontSize="12"
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                    </StackPanel>
                                </ListBoxItem>

                                <ListBoxItem Margin="0,8,0,0">
                                    <StackPanel>
                                        <TextBlock Text="New species added: Red Panda"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="5 hours ago · Admin"
                                                   FontSize="12"
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                    </StackPanel>
                                </ListBoxItem>
                            </ListBox>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>

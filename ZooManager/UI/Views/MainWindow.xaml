<Window x:Class="ZooManager.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized"
        Icon="pack://application:,,,/UI/Assets/Logo.ico"
        Title="{Binding WindowTitle}">

    <!-- ========== LAYOUT ========== -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== HEADER ===== -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}">
            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Zoo Manager"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                                VerticalAlignment="Center">

                        <Border Background="#26FFFFFF"
                                CornerRadius="10"
                                Padding="12,8"
                                Margin="0,0,12,0">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Ellipse x:Name="UserIcon"
                                         Width="32" Height="32"
                                         Fill="#E8F5E9"
                                         Margin="0,0,10,0"/>
                            <StackPanel>
                                <TextBlock x:Name="UsernameText"
                                           Text="{Binding UsernameText}"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Foreground="White"/>
                                <TextBlock x:Name="UserRoleText"
                                           Text="{Binding UserRoleText}"
                                           FontSize="11"
                                           Foreground="#CCFFFFFF"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Button x:Name="LogoutButton"
                            Command="{Binding LogoutCommand}"
                            Background="#26FFFFFF"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,8"
                            Cursor="Hand"
                            ToolTip="Abmelden">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="10"
                                        Padding="{TemplateBinding Padding}">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="Abmelden" FontWeight="SemiBold" FontSize="13"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#33FFFFFF"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#40FFFFFF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== MAIN ===== -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Border Grid.Column="0" Background="White">
                <StackPanel Margin="16">

                    <TextBlock Text="Navigation"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="8,0,0,16"/>

                    <Button x:Name="DashboardButton"
                            Content="{Binding DashboardButtonText}"
                            Style="{StaticResource NavButton}"
                            Command="{Binding ShowDashboardCommand}"
                            AutomationProperties.AutomationId="DashboardButton"/>

                    <Button x:Name="AnimalsButton"
                            Content="Tiere"
                            Style="{StaticResource NavButton}"
                            Command="{Binding ShowAnimalsCommand}"
                            AutomationProperties.AutomationId="AnimalsButton"/>

                    <Button x:Name="SpeciesButton"
                            Content="Tierart"
                            Style="{StaticResource NavButton}"
                            Command="{Binding ShowSpeciesCommand}"
                            Visibility="{Binding ShowSpecies, Converter={StaticResource BoolToVisibility}}"
                            AutomationProperties.AutomationId="SpeciesButton"/>

                    <Button x:Name="EnclosuresButton"
                            Content="Gehege"
                            Style="{StaticResource NavButton}"
                            Command="{Binding ShowEnclosuresCommand}"
                            Visibility="{Binding ShowEnclosures, Converter={StaticResource BoolToVisibility}}"
                            AutomationProperties.AutomationId="EnclosuresButton"/>

                    <Button x:Name="EmployeesButton"
                            Content="Mitarbeiter"
                            Style="{StaticResource NavButton}"
                            Command="{Binding ShowEmployeesCommand}"
                            Visibility="{Binding ShowEmployees, Converter={StaticResource BoolToVisibility}}"
                            AutomationProperties.AutomationId="EmployeesButton"/>

                    <Button x:Name="FeedingPlanButton"
                            Content="Fütterung"
                            Style="{StaticResource NavButton}"
                            Command="{Binding ShowFeedingPlanCommand}"
                            AutomationProperties.AutomationId="FeedingPlanButton"/>

                    <Separator Margin="0,16"/>

                    <Button x:Name="EventsButton"
                            Content="Events"
                            Style="{StaticResource NavButton}"
                            Command="{Binding ShowEventsCommand}"
                            AutomationProperties.AutomationId="EventsButton"/>

                    <Button x:Name="ReportsButton"
                            Content="Statistik"
                            Style="{StaticResource NavButton}"
                            Command="{Binding ShowReportsCommand}"
                            Visibility="{Binding ShowReports, Converter={StaticResource BoolToVisibility}}"
                            AutomationProperties.AutomationId="ReportsButton"/>
                </StackPanel>
            </Border>

            <!-- CONTENT -->
            <ScrollViewer Grid.Column="1">
                <ContentControl x:Name="MainContentPresenter"
                                Margin="0"
                                Content="{Binding CurrentView}"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
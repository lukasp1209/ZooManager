<Window x:Class="ZooManager.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zoo Manager"
        Width="1200" Height="750"
        MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F8">

    <!-- ========== LAYOUT ========== -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== HEADER ===== -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}">
            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Zoo Manager"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                                VerticalAlignment="Center">

                        <!-- User Chip (passt zum Layout) -->
                        <Border Background="#26FFFFFF"
                                CornerRadius="10"
                                Padding="12,8"
                                Margin="0,0,12,0">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Ellipse x:Name="UserIcon"
                                         Width="32" Height="32"
                                         Fill="#E8F5E9"
                                         Margin="0,0,10,0"/>
                                <StackPanel>
                                    <TextBlock x:Name="UsernameText"
                                               Text="Benutzername"
                                               FontWeight="SemiBold"
                                               FontSize="14"
                                               Foreground="White"/>
                                    <TextBlock x:Name="UserRoleText"
                                               Text="Rolle"
                                               FontSize="11"
                                               Foreground="#CCFFFFFF"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Logout Button (wie andere Controls, nur header-tauglich) -->
                        <Button x:Name="LogoutButton"
                                Click="LogoutButton_Click"
                                Background="#26FFFFFF"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="14,8"
                                Cursor="Hand"
                                ToolTip="Abmelden">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="10"
                                            Padding="{TemplateBinding Padding}">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="Abmelden" FontWeight="SemiBold" FontSize="13"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#33FFFFFF"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#40FFFFFF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
            </Grid>
        </Border>

        <!-- ===== MAIN ===== -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Border Grid.Column="0" Background="White">
                <StackPanel Margin="16">

                    <TextBlock Text="Navigation"
                                FontWeight="Bold"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="8,0,0,16"/>

                    <Button x:Name="DashboardButton" Content="Dashboard" Style="{StaticResource NavButton}" Click="NavButton_Click" Tag="Dashboard"/>
                    <Button x:Name="AnimalsButton" Content="Tiere" Style="{StaticResource NavButton}" Click="NavButton_Click" Tag="Animals"/>
                    <Button x:Name="SpeciesButton" Content="Tierart" Style="{StaticResource NavButton}" Click="NavButton_Click" Tag="Species"/>
                    <Button x:Name="EnclosuresButton" Content="Gehege" Style="{StaticResource NavButton}" Click="NavButton_Click" Tag="Enclosures"/>
                    <Button x:Name="EmployeesButton" Content="Mitarbeiter" Style="{StaticResource NavButton}" Click="NavButton_Click" Tag="Employees"/>
                    <Button x:Name="FeedingPlanButton" Content="Fütterung" Style="{StaticResource NavButton}" Click="NavButton_Click" Tag="FeedingPlan"/>

                    <Separator Margin="0,16"/>

                    <Button x:Name="EventsButton" Content="Events" Style="{StaticResource NavButton}" Click="NavButton_Click" Tag="Events"/>
                    <Button x:Name="ReportsButton" Content="Statistik" Style="{StaticResource NavButton}" Click="NavButton_Click" Tag="Reports"/>
                </StackPanel>
            </Border>

            <!-- CONTENT -->
            <ScrollViewer Grid.Column="1">
                <ContentControl x:Name="MainContentPresenter" Margin="0"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
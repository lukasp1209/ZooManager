<Window x:Class="ZooManager.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zoo Manager Professional"
        Width="1200" Height="750"
        MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F8">

    <!-- ========== LAYOUT ========== -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== HEADER ===== -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}">
            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Zoo Manager"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Ellipse Width="36" Height="36" Fill="#E8F5E9"/>
                    <TextBlock Text="Admin"
                               Margin="12,0,0,0"
                               Foreground="White"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== MAIN ===== -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Border Grid.Column="0" Background="White">
                <StackPanel Margin="16">

                    <TextBlock Text="Navigation"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="8,0,0,16"/>

                    <Button Content="Dashboard" Style="{StaticResource NavButton}" Click="NavButton_Click" Tag="Dashboard"/>
                    <Button Content="Animals" Style="{StaticResource NavButton}" Click="NavButton_Click" Tag="Animals"/>
                    <Button Content="Species" Style="{StaticResource NavButton}" Click="NavButton_Click" Tag="Species"/>
                    <Button Content="Enclosures" Style="{StaticResource NavButton}" Click="NavButton_Click" Tag="Enclosures"/>
                    <Button Content="Employees" Style="{StaticResource NavButton}" Click="NavButton_Click" Tag="Employees"/>
                    <Button Content="Events" Style="{StaticResource NavButton}" Click="NavButton_Click" Tag="Events"/>

                        <Separator Margin="0,16"/>

                        <Button Content="Reports" Style="{StaticResource NavButton}" Click="NavButton_Click" Tag="Reports"/>
                        <Button Content="Settings" Style="{StaticResource NavButton}" Click="NavButton_Click" Tag="Settings"/>
                    </StackPanel>
                </Border>

                <!-- CONTENT -->
                <ScrollViewer Grid.Column="1">
                    <ContentControl x:Name="MainContentPresenter" Margin="0"/>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Window>

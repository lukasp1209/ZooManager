<Window x:Class="ZooManager.UI.Views.AnimalRecord"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Animal Record"
        Width="750" Height="520"
        MinWidth="650" MinHeight="480"
        WindowStartupLocation="CenterOwner"
        Background="#F4F6F8">

    <!-- ========= RESOURCES ========= -->
    <Window.Resources>

        <SolidColorBrush x:Key="PrimaryBrush" Color="#1E5631"/>
        <SolidColorBrush x:Key="TextMainBrush" Color="#1F2933"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="#6B7280"/>

        <!-- Card -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10"
                                      ShadowDepth="2"
                                      Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Form label -->
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextMainBrush}"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="34"/>
        </Style>

        <!-- Buttons -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button"
               BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="{StaticResource TextMainBrush}"/>
        </Style>

    </Window.Resources>

    <!-- ========= LAYOUT ========= -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0"
                Background="{StaticResource PrimaryBrush}"
                Padding="20">
            <TextBlock Text="Animal Record"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"/>
        </Border>

        <!-- CONTENT -->
        <Border Grid.Row="1"
                Style="{StaticResource Card}"
                Margin="24">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- LEFT COLUMN -->
                <StackPanel Grid.Column="0">

                    <TextBlock Text="Animal Name"
                               Style="{StaticResource FormLabel}"/>
                    <TextBox Margin="0,0,0,16"/>

                    <TextBlock Text="Species"
                               Style="{StaticResource FormLabel}"/>
                    <ComboBox Margin="0,0,0,16"/>

                    <TextBlock Text="Gender"
                               Style="{StaticResource FormLabel}"/>
                    <ComboBox Margin="0,0,0,16">
                        <ComboBoxItem Content="Male"/>
                        <ComboBoxItem Content="Female"/>
                        <ComboBoxItem Content="Unknown"/>
                    </ComboBox>

                </StackPanel>

                <!-- RIGHT COLUMN -->
                <StackPanel Grid.Column="2">

                    <TextBlock Text="Date of Birth"
                               Style="{StaticResource FormLabel}"/>
                    <DatePicker Margin="0,0,0,16"/>

                    <TextBlock Text="Enclosure"
                               Style="{StaticResource FormLabel}"/>
                    <ComboBox Margin="0,0,0,16"/>

                    <TextBlock Text="Status"
                               Style="{StaticResource FormLabel}"/>
                    <ComboBox Margin="0,0,0,16">
                        <ComboBoxItem Content="Healthy"/>
                        <ComboBoxItem Content="Under Observation"/>
                        <ComboBoxItem Content="Quarantine"/>
                    </ComboBox>

                </StackPanel>
            </Grid>
        </Border>

        <!-- FOOTER -->
        <Border Grid.Row="2"
                Background="White"
                Padding="16">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Cancel"
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,8,0"/>
                <Button Content="Save Animal"
                        Style="{StaticResource PrimaryButton}"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
